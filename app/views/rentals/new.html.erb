<h1> Nova Locação </h1>

<% if @rental.errors.full_messages.any? %>
  <p> Não foi possível salvar, verifique os erros abaixo: </p>
  <ul>
  <% @rental.errors.full_messages.each do |m|%>
    <li><%= m %></li>
  <% end %>
  </ul>
<% end %>

<%= form_with model: @rental, local: true do |f| %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date %>

  <%= f.label :end_date %>
  <%= f.date_field :end_date %>

  <%= f.label :car_category_id %>
  <%= f.collection_select :car_category_id, @car_categories, :id, :name %>

  <%= f.label :client_id %>
  <%= f.collection_select :client_id, @clients, :id, :name %>

  <%= f.submit 'Enviar' %>

<%end%>