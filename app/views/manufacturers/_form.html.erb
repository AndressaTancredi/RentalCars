<% if @manufacturer.errors.full_messages.any? %>
  <p> Não foi possível salvar, verifique os erros abaixo: </p>
  <ul>
  <% @manufacturer.errors.full_messages.each do |m|%>
    <li><%= m %></li>
  <%end%>
  </ul>
<% end %>

<%= form_with(model: @manufacturer) do |f| %>
  <%= f.label :name, "Nome" %> 
  <%= f.text_field :name %>

  <%= f.submit("Enviar")%>
<% end %>